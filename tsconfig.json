{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome"]
  },
  "include": ["*.ts", "*.d.ts"],
  "exclude": ["node_modules", "dist"]
} 