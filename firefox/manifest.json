{
  "manifest_version": 2,
  "name": "ServicePort Tab Opener",
  "version": "1.1.18",
  "description": "Opens a new tab to configurable IP address",
  "browser_action": {
    "default_icon": {
      "16": "src/assets/PF8-removebg-preview.png",
      "32": "src/assets/PF8-removebg-preview.png",
      "48": "src/assets/PF8-removebg-preview.png",
      "128": "src/assets/PF8-removebg-preview.png"
    },
    "default_popup": "src/html/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "management",
    "commands",
    "browser.network"
  ],
  "permissions": [
    "https://api.github.com/"
  ],
  "commands": {
    "open-default": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Open default IP address"
    },
    "open-custom-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Open first custom address"
    },
    "open-custom-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Open second custom address"
    },
    "toggle-rescue": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Toggle rescue mode"
    }
  },
  "background": {
    "scripts": "src/js/background.js",
    "type": "module"
  },
  "options_page": "src/html/options.html",
  "icons": {
    "16": "src/assets/PF8-removebg-preview.png",
    "32": "src/assets/PF8-removebg-preview.png",
    "48": "src/assets/PF8-removebg-preview.png",
    "128": "src/assets/PF8-removebg-preview.png"
  }
}
